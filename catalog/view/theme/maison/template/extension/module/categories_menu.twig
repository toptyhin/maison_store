{% if categories %}
	<section class="bg-background-dark pt-12 pb-8 border-b border-gray-200">
		<div class="max-w-7xl mx-auto px-6 lg:px-12">
			<div class="flex flex-wrap justify-center gap-8 md:gap-12">
				{% for category in categories %}
				<a class="group flex flex-col items-center gap-3 cursor-pointer" href="{{ category.href }}">
					<div class="w-20 h-20 rounded-full bg-white border border-gray-200 shadow-soft flex items-center justify-center text-primary-light group-hover:border-primary group-hover:text-primary transition-all duration-300 transform group-hover:-translate-y-1">
						{% if category.icon %}
						<span class="material-symbols-outlined text-[32px]">{{ category.icon }}</span>
						{% endif %}
					</div>
					{% if category.text %}
					<span class="text-xs font-bold uppercase tracking-widest text-luxury-charcoal/80 group-hover:text-luxury-charcoal transition-colors">{{ category.text }}</span>
					{% endif %}
				</a>
				{% endfor %}
			</div>
		</div>
	</section>
{% endif %}