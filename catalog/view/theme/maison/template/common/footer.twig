	<div id="cookie-warning" class="cookie-notification">
		<div class="cookie-notification__container container">
			<div class="cookie-notification__info">{{ cookie_info|raw }}</div>
			<button id="accept-cookie" class="cookie-notification__btn btn btn-primary">{{ button_continue }}</button>
		</div>
	</div>
	<script>
		$('#accept-cookie').on('click', () => {
			$.get('index.php?route=common/footer/applyCookieNotification');
			$('#cookie-warning').hide();
		});
	</script>
{% endif %}

